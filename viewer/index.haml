!!!XHTML
%html
  - @title = 'camera-server test'
  %head
    %title= @title
    %script{:type => 'text/javascript', :src => 'jquery.js'}
    %script{:type => 'text/javascript', :src => 'camera-server.js'}
    :javascript
      $(function(){
        CameraServer.start($('div#camera_img'), 'http://localhost:8080', 1000);
      });
    :css
      div#camera_img {
        height : 240px;
        width : 320px;
      }
  %body
    %h1= @title
    %div#camera_img
    %hr
      - @url = 'https://github.com/shokai/camera-server'
      %a{:href => @url} #{@url}